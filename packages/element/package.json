  "description": "Compiler of HTMLPlus",
  "type": "module",
  "main": "client/index.js",
  "types": "client/index.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc -w",
    "postbuild": "node scripts/build.post.js",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "dev:start": "node src/dev/scripts/start.js",
    "dev:build": "ts-node --esm src/dev/scripts/build.ts",
    "dev:build:watch": "nodemon src/dev/scripts/build.ts"
  },
  "files": [
    "client",
    "compiler",
    "constants",
    "runtime",
    "types",
    "package.json",
    "README.md"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">= 12.7.0"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htmlplus/element.git"
  },
  "bugs": {
    "url": "https://github.com/htmlplus/element/issues"
  },
  "homepage": "https://github.com/htmlplus/element#readme",
  "dependencies": {
    "@babel/generator": "^7.16.0",
    "@babel/parser": "^7.16.4",
    "@babel/traverse": "^7.16.3",
    "@babel/types": "^7.16.0",
    "@types/node": "^16.11.11",
    "change-case": "^4.1.2",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "handlebars": "^4.7.7",
    "listr2": "^4.0.5",
    "log-update": "^5.0.0",
    "ora": "^6.1.0",
    "typescript": "^4.5.2",
    "uhtml": "^3.0.1"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.1.1",
    "cpy": "^9.0.1",
    "nodemon": "^2.0.16",
    "prettier": "^2.5.0",
    "rimraf": "^3.0.2",
    "ts-node": "^10.7.0",
    "vite": "^2.7.10"
  }
