  "description": "Compiler of HTMLPlus",
  "type": "module",
  "main": "client/index.js",
  "types": "client/index.d.ts",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "tsc",
    "build:watch": "tsc -w",
    "postbuild": "node scripts/build.post.js",
    "clean": "rimraf dist",
    "format": "prettier --write .",
    "dev:start": "ts-node --esm src/dev/scripts/start.ts",
    "dev:build": "ts-node --esm src/dev/scripts/build.ts",
    "dev:build:watch": "nodemon src/dev/scripts/build.ts"
  },
  "files": [
    "**/*.*"
  ],
  "publishConfig": {
    "directory": "dist"
  },
  "engines": {
    "node": ">= 12.7.0"
  },
  "keywords": [],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/htmlplus/htmlplus.git"
  },
  "bugs": {
    "url": "https://github.com/htmlplus/htmlplus/issues"
  },
  "homepage": "https://github.com/htmlplus/htmlplus#readme",
  "dependencies": {
    "@babel/generator": "^7.18.9",
    "@babel/parser": "^7.18.9",
    "@babel/traverse": "^7.18.9",
    "@babel/types": "^7.18.9",
    "@types/node": "^18.6.3",
    "change-case": "^4.1.2",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "handlebars": "^4.7.7",
    "ora": "^6.1.2",
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "@trivago/prettier-plugin-sort-imports": "^3.3.0",
    "cpy": "^9.0.1",
    "nodemon": "^2.0.19",
    "prettier": "^2.7.1",
    "rimraf": "^3.0.2",
    "ts-node": "^10.9.1",
    "vite": "^3.0.4"
  }
